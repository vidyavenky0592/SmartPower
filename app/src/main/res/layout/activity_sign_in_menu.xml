            android:background="@color/design_default_color_primary" android:layout_alignParentBottom="true"
            android:layout_marginBottom="269dp" android:layout_height="79dp"/>
    <ImageButton
            android:layout_width="67dp"
            android:layout_height="69dp" tools:srcCompat="@tools:sample/avatars"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:id="@+id/imageButton"
            android:layout_marginTop="7dp" android:layout_marginEnd="341dp"/>
    <ImageView
            android:layout_width="171dp"
            android:layout_height="62dp" app:srcCompat="@drawable/dominion_energy"
            android:layout_alignParentBottom="true" android:id="@+id/imageView"
            android:layout_marginBottom="33dp" android:layout_marginTop="493dp" android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cust_ri" android:layout_marginStart="-100dp"/>
    <TextView
            android:text="Rewards: 200 points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButton" android:layout_marginStart="102dp" android:id="@+id/textView3"
            android:textSize="24sp" android:textColor="@color/colorPrimary" android:layout_marginTop="12dp"/>

    <ImageView
            android:layout_width="171dp"
            android:layout_height="62dp" app:srcCompat="@drawable/dominion_energy"
            android:layout_alignParentBottom="true" android:id="@+id/imageView"
            android:layout_marginBottom="33dp" android:layout_marginTop="493dp" android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cust_ri" android:layout_marginStart="-100dp"/>

</RelativeLayout>
