            android:text="Alerts !!"
            android:layout_width="121dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="233dp" android:layout_alignParentLeft="true"
            android:id="@+id/alerts" android:layout_marginLeft="233dp"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:background="@color/design_default_color_primary" android:layout_alignParentBottom="true"
            android:layout_marginBottom="148dp" android:layout_height="79dp"/>
    <Button
            android:text="Tips to Save Energy"
            android:layout_width="121dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="229dp" android:layout_alignParentLeft="true"
            android:id="@+id/tips_save" android:layout_marginLeft="229dp"
