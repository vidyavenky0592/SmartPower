            android:background="@color/design_default_color_primary" android:layout_alignParentBottom="true"
            android:layout_marginBottom="267dp" android:layout_height="79dp"/>
    <Button
            android:text="Safety"
            android:layout_width="121dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="55dp" android:layout_alignParentLeft="true"
            android:id="@+id/safety_button" android:layout_marginLeft="55dp"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:background="@color/design_default_color_primary" android:layout_alignParentBottom="true"
            android:layout_marginBottom="151dp" android:layout_height="79dp"/>
