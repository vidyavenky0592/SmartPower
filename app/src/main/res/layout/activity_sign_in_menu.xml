<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".SignInMenu">

    <Button
            android:text="Report An Incident"
            android:layout_width="129dp"
            android:layout_height="71dp"
            android:layout_alignParentTop="true" android:id="@+id/cust_ri" android:layout_marginTop="152dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginRight="58dp" android:layout_marginEnd="58dp"
            style="@android:style/Widget.DeviceDefault.Button.Colored"
            android:background="@color/design_default_color_primary"/>
    <TextView
            android:text="Welcome Vidya!"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/textView" android:layout_marginTop="22dp"
