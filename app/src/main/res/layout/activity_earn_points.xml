<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EarnPoints">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/dominion_energy" tools:layout_editor_absoluteY="388dp"
            tools:layout_editor_absoluteX="92dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="31dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="94dp" android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"/>
    <TextView
            android:text="Equipment:"
            android:layout_width="106dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="40dp" android:layout_alignParentTop="true" android:id="@+id/textView4"
            android:layout_marginTop="64dp" android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="42dp"
            android:id="@+id/editText5" android:layout_marginTop="50dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="29dp"
            android:id="@+id/editText11" android:layout_marginTop="112dp"/>
    <TextView
            android:text="Watt Rating:"
            android:layout_width="116dp"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/textView5"
            android:layout_marginTop="135dp" android:layout_alignStart="@+id/textView4" android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:textStyle="bold"/>
    <Button
            android:text="Calculate Points"
            android:layout_width="142dp"
            android:layout_height="wrap_content" android:layout_toEndOf="@+id/textView4"
            android:layout_alignParentTop="true" android:id="@+id/button" android:layout_marginTop="194dp"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/design_default_color_primary"
            android:layout_marginStart="-20dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/points_msg"
            android:layout_alignParentEnd="true" android:layout_marginEnd="100dp"
            android:layout_alignParentBottom="true" android:id="@+id/imageView2" android:layout_marginBottom="216dp"/>

</RelativeLayout>