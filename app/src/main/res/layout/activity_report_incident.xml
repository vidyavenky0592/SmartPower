<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ReportIncident">

    <TextView
            android:id="@+id/RIText"
            android:layout_width="272dp"
            android:layout_height="72dp"
            android:text="Report An Incident"
            android:textColor="@color/design_default_color_primary"
            android:textSize="30sp"
            android:textStyle="bold"
            app:fontFamily="sans-serif"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="34dp" tools:ignore="MissingConstraints"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp" android:layout_alignParentEnd="true" android:layout_marginEnd="53dp"/>

    <Button
            android:id="@+id/RI_CBut"
            android:layout_width="171dp"
            android:layout_height="56dp"
            android:text="Call-in"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="136dp" tools:ignore="MissingConstraints"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/design_default_color_primary"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="143dp"/>

    <Button
            android:id="@+id/ncust_r_submit"
            android:layout_width="173dp"
            android:layout_height="60dp"
            android:text="Submit a report"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="224dp" tools:ignore="MissingConstraints"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/design_default_color_primary"
            android:layout_marginTop="48dp" android:layout_alignStart="@+id/RI_CBut" android:layout_marginStart="5dp"
            android:layout_below="@+id/RI_CBut"/>

    <Button
            android:id="@+id/RI_lcbut"
            android:layout_width="174dp"
            android:layout_height="62dp"
            android:text="Live Chat"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="327dp" tools:ignore="MissingConstraints"
            android:background="@color/design_default_color_primary" style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="197dp" android:layout_marginTop="50dp" android:layout_below="@+id/ncust_r_submit"
            android:layout_alignStart="@+id/ncust_r_submit"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="171dp"
            android:layout_height="62dp"
            android:layout_marginTop="508dp"
            android:layout_marginEnd="121dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dominion_energy" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" android:layout_marginStart="119dp"/>
</RelativeLayout>
