<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".CreateAccount">

    <TextView
            android:id="@+id/CAheader"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Create an Account"
            android:textColor="@color/design_default_color_primary"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" android:layout_alignParentStart="true" android:layout_marginStart="75dp"
            android:layout_alignParentTop="true" android:layout_marginTop="26dp"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="171dp"
            android:layout_height="62dp"
            android:layout_marginTop="432dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dominion_energy" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="40dp"/>
    <TextView
            android:text="First Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="47dp" android:layout_alignParentTop="true" android:id="@+id/textView7"
            android:layout_marginTop="99dp" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <TextView
            android:text="Last Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="47dp" android:layout_alignParentTop="true" android:id="@+id/textView8"
            android:layout_marginTop="159dp" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="83dp" android:layout_alignParentTop="true" android:id="@+id/textView9"
            android:layout_marginTop="209dp" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="32dp"
            android:id="@+id/editText3" android:layout_marginTop="197dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="35dp"
            android:id="@+id/editText8" android:layout_marginTop="142dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:layout_marginEnd="35dp"
            android:id="@+id/editText9" android:layout_marginTop="88dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_alignParentTop="true" android:id="@+id/editText6" android:layout_marginTop="258dp"
            android:layout_alignStart="@+id/editText3"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:id="@+id/textView10"
            android:layout_marginTop="269dp" android:layout_alignStart="@+id/textView7" android:textSize="18sp"
            android:textStyle="bold" android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginStart="2dp"/>
    <EditText
            android:layout_width="175dp"
            android:layout_height="32dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignEnd="@+id/editText3" android:layout_alignParentBottom="true" android:id="@+id/editText7"
            android:layout_marginBottom="255dp" android:layout_marginEnd="-5dp"/>
    <TextView
            android:text="Account# (optional):"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentBottom="true" android:id="@+id/textView11"
            android:layout_marginBottom="255dp" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/create_submit"
            android:layout_alignStart="@+id/editText3" android:layout_marginBottom="161dp"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/design_default_color_primary"/>
</RelativeLayout>
